{
    int numbers[5];
    int even = 0;
    
    cout << "Введіть 5 цілих чисел: \n";
    
    //Цикл для введення 5 чисел та перевірки їх функцією
    for (int i = 0; i < 5; ++i) { 
        cout << "Число №" << i + 1 << ": ";
        cin >> numbers[i];
        
        // Використовуємо функцію Even для перевірки парності
        if (Even(numbers[i])) {
            ++even;
        }
    }
    cout << "Кількість парних чисел у наборі: " << even << "\n";
    
